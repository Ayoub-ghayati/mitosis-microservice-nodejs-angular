docker service create --name mongo --publish 27017:27017 --network microservices-net --mount "type=volume,target=/data/db,src=mongo" --replicas 2 mongo:3.4
docker service create --name kafka --publish 9092:9092 --env KAFKA_ADVERTISED_HOST_NAME=192.168.0.32 --env KAFKA_ADVERTISED_PORT=9092 --env KAFKA_ZOOKEEPER_CONNECT=zookeeper:2181 --env KAFKA_CREATE_TOPICS=topic-mitosis:1:1 --env KAFKA_LISTENERS="PLAINTEXT://:9092" --env KAFKA_ADVERTISED_LISTENERS="PLAINTEXT://192.168.0.32:9092" --mount "type=bind,target=/var/run/docker.sock,src=/var/run/docker.sock" --network microservices-net --replicas 1 wurstmeister/kafka:0.10.1.0
docker service create --name zookeeper --publish 2181:2181 --network microservices-net --replicas 1 zookeeper:3.4
